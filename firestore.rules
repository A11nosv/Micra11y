rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // PROVISIONAL: Allow read/write for testing. 
      // TODO: Implement proper security rules (e.g., auth-based) before production.
      allow read, write: if request.time < timestamp.date(2026, 3, 26);
    }
  }
}
